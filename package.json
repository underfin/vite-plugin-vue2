{
  "name": "vite-plugin-vue2",
  "version": "0.0.3",
  "description": "Vite plugin for Vue2",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsc -w -p . --skipLibCheck",
    "test": "jest --clearCache && jest --runInBand --forceExit",
    "build": "rm -rf dist && tsc -p . --skipLibCheck",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "prepublishOnly": "yarn build && yarn changelog",
    "postpublish": "git add CHANGELOG.md && git commit -m 'chore: changelog [ci skip]'"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vite",
    "vue2"
  ],
  "author": "underfin",
  "license": "MIT",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@vue/component-compiler-utils": "^3.1.2",
    "chalk": "^4.1.0",
    "debug": "^4.1.1",
    "esbuild": "^0.5.19",
    "fs-extra": "^9.0.1",
    "hash-sum": "^2.0.0",
    "prettier": "^2.0.5",
    "rollup-plugin-vue": "5.1.9",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11"
  },
  "peerDependencies": {
    "vite": ">=1.0.0-rc.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/hash-sum": "^1.0.0",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.14",
    "@types/puppeteer": "^3.0.1",
    "conventional-changelog-cli": "^2.0.34",
    "execa": "^4.0.2",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "puppeteer": "^5.0.0",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6",
    "yorkie": "^2.0.0"
  }
}
